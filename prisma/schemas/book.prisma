model Book {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  title         String
  isFiction     Boolean
  datePublished DateTime
  author        Author   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId      Int
}


model Author {
    id     Int @id
    books  Book[]
}